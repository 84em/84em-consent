{
  "name": "84em-consent",
  "version": "2.0.0",
  "description": "Simple cookie consent banner for 84EM",
  "main": "assets/consent.js",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "cleancss -o assets/consent.min.css assets/consent.css --source-map",
    "build:js": "terser assets/consent.js -o assets/consent.min.js -c -m --source-map",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "chokidar 'assets/consent.css' -c 'npm run build:css'",
    "watch:js": "chokidar 'assets/consent.js' -c 'npm run build:js'",
    "dev": "npm run build && npm run watch",
    "clean": "rm -f assets/*.min.* assets/*.map",
    "package": "./build.sh",
    "release": "npm run build && npm run package"
  },
  "keywords": [
    "wordpress",
    "cookie-consent",
    "gdpr",
    "privacy"
  ],
  "author": "84EM",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "clean-css-cli": "^5.6.3",
    "npm-run-all": "^4.1.5",
    "terser": "^5.31.0"
  }
}